{
    "extends": ["@commitlint/config-angular"],
    "rules": {
      "subject-case": [
        2,
        "always",
        ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "ci",
          "feat",
          "fix",
          "refactor",
          "style",
          "test",
          "build"
        ]
      ],
      "scope-enum": [
        1,
        "always",
        [
          "auth",
          "cms"
        ]
      ]
    }
  }